<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/card"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:weightSum="1">


        <com.joooonho.SelectableRoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/candidate_image"
            android:scaleType="centerCrop"
            app:sriv_left_top_corner_radius="6dp"
            app:sriv_right_top_corner_radius="6dp"
            app:sriv_left_bottom_corner_radius="0dp"
            app:sriv_right_bottom_corner_radius="0dp"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:cropToPadding="true" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerVertical="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:textStyle="bold"
                android:capitalize="words"
                android:id="@+id/candidate_alias"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:layout_toRightOf="@id/candidate_alias"
                android:id="@+id/candidate_age"
                android:layout_gravity="left" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>