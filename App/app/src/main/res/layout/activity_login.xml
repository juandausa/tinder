<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.tinder_app.LoginActivity">


    <RelativeLayout
        android:id="@+id/childLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >
        <!-- This will be your overlay so here you can add your login button ect -->

        <ImageView
            android:id="@+id/tinder_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/tinder_name"
            android:layout_alignParentTop="true"
            android:paddingTop="50dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/login_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tinder_title"
            android:layout_centerInParent="true"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textAlignment="gravity"
            android:text="Todo empieza aqui."
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_subtitle"
            android:layout_centerInParent="true"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textAlignment="gravity"
            android:text="Amigos, citas, relaciones, y mucho mÃ¡s"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:textSize="@dimen/com_facebook_share_button_text_size"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</RelativeLayout>
